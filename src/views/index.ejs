<%- include('layout/header', { title: setting.title })%>

<div class="page-container">

  <div class="left">
    <div class="logo-warpper">
      <img src="<%= setting.logo%>" alt="logo">
      <span><%= setting.title %></span>
    </div>
    <ul class="nav bg-dark flex-column">
      <% data.forEach(item => { %>
      <li class="nav-item">
        <a class="nav-link" href="#<%= item.id%>">
          <!-- <img src="<%= item.logo%>" alt=""> -->
          <span class="iconfont icon-ziyuan mr-1"></span>
          <span><%= item.title%></span>
        </a>
      </li>
      <% }) %>
    </ul>
  </div>
  <div class="right">
    <% data.forEach(item => { %>
    <div class="mb-5">
      <div class="type-box">
        <span class="iconfont icon-ziyuan mr-1"></span>
        <!-- <img src="<%= item.logo%>" alt="logo"> -->
        <!-- <span class="type-logo iconfont icon-weibiaoti2"></span> -->
        <span class="type-title"><%= item.title%></span>
      </div>
      <div class="container-fluid">
        <% item.resources.forEach(resource => { %>
        <div class="row">
          <div class="col-md-4 col-lg-3 col-sm-6 item-box"  data-toggle="tooltip" data-placement="bottom" title="<%= resource.link%>">
            <a href="<%= resource.link%>" target="_blank">
              <img src="<%= resource.logo%>" alt="">
              <div class="text">
                <div class="text-item top">
                  <span class="title"><%= resource.title%></span>
                  <% resource.tags.forEach(tag => { %>
                  <span class="badge badge-primary ml-1"><%= tag.title%></span>
                  <% }) %>
                </div>
                <div class="text-item bottom"><%= resource.description%></div>
              </div>
            </a>
          </div>
        </div>
        <% }) %>
      </div>
    </div>
    <% }) %>
  </div>


</div>



<%- include('layout/footer')%>